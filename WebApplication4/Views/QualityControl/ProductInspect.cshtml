
@{
    ViewBag.Title = "ProductInspect";
    Layout = "~/Views/Shared/Home.cshtml";
    int count = 1;
}

@if (ViewBag.userSession == "false")
{
    <div style="background-image: url('../img/IconDisconected.png');" class="icon200x200"></div>
}
else
{
    <script>      
    </script>
    <body>
        <h6 style="font-family:Calibri;text-align:center;" class="form-control">Inspeção Final</h6>
        <div class="container">
            <input class="form-control" id="filterKey" type="text" placeholder="Pesquisar...">
            <br>
            <table class="table table-sm table-hover" style="background-color:rgb(255, 255, 255); font-family:Calibri">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>N° do RT</th>
                        <th>Ordem</th>
                        <th>Cód. do Item</th>
                        <th>Descrição</th>
                        <th>Aberto</th>
                        <th>Quantidade</th>
                        <th>Data da Postagem</th>
                    </tr>
                </thead>
                <tbody id="data">

                    @foreach (ProductInspect proInsp in ViewBag.data)
                     {
                    <tr ondblclick="ProductInspectByTimeRegister(@proInsp.TimeRegisterID)">
                        <td>@count</td>
                        <td class="font-weight-bold">@proInsp.TimeRegisterID</td>
                        <td>@proInsp.DocEntry</td>
                        <td>@proInsp.ItemCode</td>
                        <td>@proInsp.ItemName</td>
                        <td>@proInsp.OpenQty</td>
                        <td>@proInsp.Quantity</td>
                        <td>@proInsp.EndTimeRegister</td>
                        <td><a href="#" onclick="DelProdInspByTReg(@proInsp.TimeRegisterID)">Excluir</a></td>
                    </tr>
                        count++;

                     }

                </tbody>
            </table>
        </div>
    </body>
}


